<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_round_table"
        android:elevation="4dp"
        android:padding="12dp"
        android:layout_margin="6dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="안드로이드 게시글 제목 길이 테스트 중 ... "
            android:maxLines="1"
            android:textSize="16sp"
            android:padding="3dp"
            android:fontFamily="@font/nanumsquare_round_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="11sp"
            tools:text="작성자 MuAng59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_content" />
        <TextView
            android:id="@+id/tv_hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="3dp"
            android:textSize="11sp"
            tools:text="조회수 245회"
            app:layout_constraintStart_toEndOf="@id/tv_nickname"
            app:layout_constraintBottom_toTopOf="@id/tv_content" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_round_bold"
            android:padding="3dp"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2021/11/07 11:35:23" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"/>
        <ImageView
            android:id="@+id/tv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_thumb_up_24"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="243"
            android:textSize="14sp"
            android:padding="3dp"
            android:fontFamily="@font/nanumsquare_round_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toEndOf="@id/tv_like"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/tv_unlike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_thumb_down_24"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toEndOf="@id/tv_like_count"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_unlike_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="19"
            android:textSize="14sp"
            android:padding="3dp"
            android:fontFamily="@font/nanumsquare_round_bold"
            app:layout_constraintStart_toEndOf="@id/tv_unlike"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/tv_report"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_report_24"
            android:textSize="16sp"
            android:layout_marginEnd="6dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toStartOf="@id/tv_delete"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/tv_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_delete_24"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
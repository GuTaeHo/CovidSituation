<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lo_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="18dp">
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="대구"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:fontFamily="@font/nanumsquare_round_extra_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_round_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_city"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="격리중"/>
                <TextView
                    android:id="@+id/tv_care_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_city"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/scdream_bold"
                    android:textColor="@color/pastel_strong_orange"
                    tools:text="1,067"/>
                <TextView
                    android:id="@+id/tv_infect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_care"
                    android:text="확진환자"/>
                <TextView
                    android:id="@+id/tv_infect_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_care_contents"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/scdream_bold"
                    android:textColor="@color/pastel_strong_blue"
                    tools:text="15,790"/>
                <TextView
                    android:id="@+id/tv_compare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_infect"
                    android:text="전일대비"/>
                <TextView
                    android:id="@+id/tv_compare_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_infect_contents"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/scdream_bold"
                    android:textColor="@color/pastel_strong_red"
                    tools:text="+68"/>
                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compare"
                    android:text="격리해제"/>

                <TextView
                    android:id="@+id/tv_complete_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compare_contents"
                    android:fontFamily="@font/scdream_bold"
                    android:textColor="@color/pastel_strong_blue"
                    tools:text="14,481" />
                <TextView
                    android:id="@+id/tv_death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_complete"
                    android:text="사망자"/>
                <TextView
                    android:id="@+id/tv_death_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_complete_contents"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/scdream_bold"
                    tools:text="811"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
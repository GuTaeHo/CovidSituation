<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/view_round_dark_gray">

        <LinearLayout
            android:id="@+id/lo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="24dp"
            android:paddingRight="12dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_round_regular"
                android:gravity="center"
                android:textColor="@color/white_dark_10"
                android:textSize="16sp"
                tools:text="메시지">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lo_text"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/lo_negative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="취소"
                    android:fontFamily="@font/nanumsquare_round_extra_bold"
                    android:textColor="@color/white_dark_10"
                    android:textSize="16sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/lo_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="확인"
                    android:fontFamily="@font/nanumsquare_round_extra_bold"
                    android:textColor="@color/teal_200"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
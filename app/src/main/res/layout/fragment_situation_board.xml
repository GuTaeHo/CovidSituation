<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SituationBoardFragment">
        <LinearLayout
            android:id="@+id/lo_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_campaign_24" />
                <TextView
                    android:id="@+id/tv_daily_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:fontFamily="@font/nanumsquare_round_extra_bold"
                    android:textSize="16sp"
                    android:text="일일 확진 현황" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">
                <TextView
                    android:id="@+id/tv_daily_infect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="확진환자 (2,564)"/>
                <TextView
                    android:id="@+id/tv_daily_care"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="격리해제 (1,481)"/>
                <TextView
                    android:id="@+id/tv_daily_death"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="사망자 (34,603)"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lo_total_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_below="@id/lo_daily_title"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_fact_check_24" />
            <TextView
                android:id="@+id/tv_total_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:fontFamily="@font/nanumsquare_round_extra_bold"
                android:textSize="16sp"
                android:text="전체 감염 현황" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/lo_total_title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lo_total_infect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_red"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="확진환자"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_infect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="311,289"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/tv_total_infect_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="(+2,564)"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lo_total_cure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_yellow"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="완치(격리해제)"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_cure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="274,205"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_cure_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="(+1,481)"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lo_total_death"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_green"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사망자"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_death"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="2,481"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_death_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="(+7)"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lo_total_exam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_android"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="누적 검사수"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_exam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="14,544,258"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/tv_total_exam_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="(+58,998)"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lo_total_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_blue"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="검사중"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1,149,658"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_check_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="(+12,041)"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lo_total_negative"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastel_purple"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="결과음성"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_total_negative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="13,083,311"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_total_negative_compare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="(+44,393)" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ScrollView>
    </RelativeLayout>
</layout>